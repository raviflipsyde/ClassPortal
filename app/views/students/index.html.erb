<style>
  body {background-color:#2E2F30;}
  h1   {color:white;}
  p    {color:white;}
</style>
<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>
<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3"> Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>

        <td><%= link_to 'Show', student , class: "btn btn-sm btn-info"%></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-sm btn-danger"%></td>

      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class: "myButton"  %>
