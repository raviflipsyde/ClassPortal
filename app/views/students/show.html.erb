
<h2>Student Homepage</h2>
<p id="notice"><%= notice %></p>




<table>
  <thead>
  <tr>
    <th>Course Name</th>
    <th>Grade</th>
    <th>Status</th>
    <th colspan="3">Actions</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= Course.find(enrollment.course_id).title%></td>
        <td><%= enrollment.grade %></td>
        <% if enrollment.estatus %>
            <td><%= enrollment.estatus %></td>
                <% else %>
            <td>false</td>
                <% end %>

        <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>

  <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Message', new_message_path,class: "myButton" %>
<%= link_to 'Read Messages', messages_path,class: "myButton" %>
<%= link_to 'Browse Courses', courses_path, class: "myButton" %>
<%= link_to 'Course History', show_course_history_students_path,{ class: "myButton", method: :post}  %>
