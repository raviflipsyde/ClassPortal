<div class="col-md-10">

<p id="notice"><%= notice %></p>

  <h1>Listing Admins</h1>

  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"> Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @admins.each do |admin| %>
        <tr>
          <td><%= admin.name %></td>
          <td><%= admin.email %></td>
        <td><%= link_to 'Show', admin , class: "btn btn-sm btn-info"%></td>
        <td><%= link_to 'Edit', edit_admin_path(admin), class: "btn btn-sm btn-success" %></td>

<%else %>
          <%else %>
        <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-sm btn-danger"%></td>
<%end %>

        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

<%= link_to 'New Admin', new_admin_path, class: "myButton"  %>
  <%= link_to 'Back', admin_path(current_user), class: "myButton"  %>
</div>