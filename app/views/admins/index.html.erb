<div class="col-md-10">
  <style>
    body {background-color:#2E2F30;}
    h1   {color:white;}
    p    {color:white;}
  </style>
<p id="notice"><%= notice %></p>

  <h1>Listing Admins</h1>

  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"> Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @admins.each do |admin| %>
        <tr>
          <td><%= admin.name %></td>
          <td><%= admin.email %></td>
          <%if(admin.id == 1 || admin.id == @c_id) %>
              <td><%= link_to 'Edit', edit_admin_path(admin), class: "btn btn-sm btn-success" %></td>

          <%else %>
              <td><%= link_to 'Edit', edit_admin_path(admin), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-sm btn-danger"%></td>
          <%end %>

        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

<%= link_to 'New Admin', new_admin_path, class: "myButton"  %>
</div>