<style>
  body {background-color:#2E2F30;}
  h1   {color:white;}
  p    {color:white;}
</style>
<p id="notice"><%= notice %></p>

<h1>Listing Instructors</h1>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3"> Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.name %></td>
        <td><%= instructor.email %></td>
        <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-sm btn-danger"%></td>

      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instructor', new_instructor_path, class: "myButton"  %>
