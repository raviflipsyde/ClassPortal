<p id="notice"><%= notice %></p>
<style>
  body {background-color:#2E2F30;}
  h1   {color:white;}
  p    {color:white;}
</style>
<h1>Listing Courses</h1>
<body background="background1.jpg">
<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Description</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.number %></td>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.startdate %></td>
        <td><%= course.enddate %></td>
        <td><%= course.status %></td>
        <% if (@is_admin == true )  %>
            <td><%= link_to 'Show', course,class: "btn btn-sm btn-info" %></td>
            <td><%= link_to 'Edit', edit_course_path(course),class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-sm btn-danger" %></td>
        <%else%>
            <td><%= link_to 'Show', course %></td>
            <td><%= link_to 'Enroll', new_enrollment_path %></td>
        <%end%>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if (@is_admin == true) %>
<%= link_to 'New Course', new_course_path, class: "myButton" %>
<%end%>